@model Riverty.Web.Models.RateViewModel

<h2>Currency Converter</h2>

<form asp-action="Index" method="post">
    <div>
        <label for="Request.SourceCurrency">Source Currency</label>
        <input asp-for="Request.SourceCurrency" type="text" />
        <span asp-validation-for="Request.SourceCurrency" class="text-danger"></span>
    </div>

    <div>
        <label for="Request.TargetCurrency">Target Currency</label>
        <input asp-for="Request.TargetCurrency" type="text" />
        <span asp-validation-for="Request.TargetCurrency" class="text-danger"></span>
    </div>

    <div>
        <label for="Request.DateType">Rate Type</label>
        <select asp-for="Request.DateType">
            <option value="Latest">Latest</option>
            <option value="Historical">Historical</option>
        </select>
    </div>

    <div>
        <label for="Request.Date">Date</label>
        <input asp-for="Request.Date" type="date" />
        <span asp-validation-for="Request.Date" class="text-danger"></span>
    </div>

    <div>
        <label for="Request.Amount">Amount</label>
        <input asp-for="Request.Amount" type="number" step="0.01" />
        <span asp-validation-for="Request.Amount" class="text-danger"></span>
    </div>

    <button type="submit">Convert</button>
</form>

@if (Model.Response != null)
{
    <h3>Conversion Result</h3>
    <p>@Model.Request.Amount @Model.Response.SourceCurrency = @Model.Response.ConvertedAmount @Model.Response.TargetCurrency</p>
    <p>Rate Type: @Model.Response.DateType</p>
    @if (!string.IsNullOrEmpty(Model.Response.Date))
    {
        <p>Date: @Model.Response.Date</p>
    }
}